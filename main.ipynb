   "source": [
    "world_cup_events, country_stats, choropleth_data = create_world_cup_dataset()\n",
    "app = dash.Dash(__name__, title=\"FIFA World Cup Dashboard\",)\n",
    "server = app.server"
    "app.layout = html.Div([\n",
    "    html.H1(\"FIFA World Cup Dashboard\", style={\"textAlign\": \"center\", \"color\": \"navy\", \"marginTop\": \"20px\"}),\n",
    "    html.Hr(),\n",
    "    \n",
    "    html.Div([\n",
    "        html.H2(\"World Cup Champions\", style={\"textAlign\": \"center\"}),\n",
    "        html.P(\"The map shows all countries that have won the FIFA World Cup. Darker colors indicate more wins.\", \n",
    "               style={\"textAlign\": \"center\"}),\n",
    "        dcc.Graph(id=\"winners-map\")\n",
    "    ]),\n",
    "    \n",
    "    html.Hr(),\n",
    "    \n",
    "    html.Div([\n",
    "        html.Div([\n",
    "            html.H3(\"Select a Country\", style={\"textAlign\": \"center\"}),\n",
    "            dcc.Dropdown(\n",
    "                id=\"country-dropdown\",\n",
    "                options=[{\"label\": country, \"value\": country} for country in sorted(country_stats[\"Country\"].unique())],\n",
    "                value=\"Brazil\",\n",
    "                clearable=False\n",
    "            ),\n",
    "            html.Div(id=\"country-stats-display\", style={\"marginTop\": \"20px\", \"textAlign\": \"center\"})\n",
    "        ], style={\"width\": \"48%\", \"display\": \"inline-block\", \"verticalAlign\": \"top\"}),\n",
    "        \n",
    "        html.Div([\n",
    "            html.H3(\"Select a World Cup Year\", style={\"textAlign\": \"center\"}),\n",
    "            dcc.Dropdown(\n",
    "                id=\"year-dropdown\",\n",
    "                options=[{\"label\": str(year), \"value\": year} for year in sorted(world_cup_events[\"Year\"].unique())],\n",
    "                value=2022,\n",
    "                clearable=False\n",
    "            ),\n",
    "            html.Div(id=\"year-stats-display\", style={\"marginTop\": \"20px\", \"textAlign\": \"center\"})\n",
    "        ], style={\"width\": \"48%\", \"display\": \"inline-block\", \"verticalAlign\": \"top\", \"float\": \"right\"})\n",
    "    ])\n",
    "], style={\"maxWidth\": \"1200px\", \"margin\": \"0 auto\", \"padding\": \"20px\"})\n",
    "\n",
    "@app.callback(\n",
    "    Output(\"winners-map\", \"figure\"),\n",
    "    Input(\"winners-map\", \"id\") \n",
    ")\n",
    "def update_winners_map(_):\n",
    "    winners_data = choropleth_data[choropleth_data[\"Wins\"] > 0]\n",
    "    fig = px.choropleth(\n",
    "        winners_data,\n",
    "        locations=\"ISO_Code\",\n",
    "        color=\"Wins\",\n",
    "        hover_name=\"Country\",\n",
    "        color_continuous_scale=\"blues\",\n",
    "        labels={\"Wins\": \"World Cup Wins\"},\n",
    "        title=\"Countries that have won the FIFA World Cup\",\n",
    "    )\n",
    "    \n",
    "    fig.update_layout(\n",
    "        autosize=True,\n",
    "        height=600,\n",
    "        geo=dict(\n",
    "            showframe=False,\n",
    "            showcoastlines=True,\n",
    "        ),\n",
    "        coloraxis_colorbar=dict(\n",
    "            title=\"Number of Wins\",\n",
    "            thicknessmode=\"pixels\", thickness=20,\n",
    "            lenmode=\"pixels\", len=300,\n",
    "            ticks=\"outside\"\n",
    "        )\n",
    "    )\n",
    "    \n",
    "    return fig\n",
    "\n",
    "@app.callback(\n",
    "    Output(\"country-stats-display\", \"children\"),\n",
    "    Input(\"country-dropdown\", \"value\")\n",
    ")\n",
    "def display_country_stats(selected_country):\n",
    "    country_data = country_stats[country_stats[\"Country\"] == selected_country].iloc[0]\n",
    "    return html.Div([\n",
    "        html.H4(selected_country, style={\"marginBottom\": \"10px\", \"color\": \"navy\"}),\n",
    "        html.Div([\n",
    "            html.Div([\n",
    "                html.H5(\"World Cup Wins\", style={\"margin\": \"5px\"}),\n",
    "                html.H3(f\"{int(country_data['Wins'])}\", \n",
    "                        style={\"fontSize\": \"48px\", \"color\": \"royalblue\", \"margin\": \"10px\"})\n",
    "            ], style={\"backgroundColor\": \"lightgray\", \"padding\": \"15px\", \"borderRadius\": \"10px\", \"margin\": \"10px\"}),\n",
    "            \n",
    "            html.Div([\n",
    "                html.H5(\"Runner-Up Finishes\", style={\"margin\": \"5px\"}),\n",
    "                html.H3(f\"{int(country_data['Runner_ups'])}\", \n",
    "                        style={\"fontSize\": \"48px\", \"color\": \"dimgray\", \"margin\": \"10px\"})\n",
    "            ], style={\"backgroundColor\": \"lightgray\", \"padding\": \"15px\", \"borderRadius\": \"10px\", \"margin\": \"10px\"}),\n",
    "            \n",
    "            html.Div([\n",
    "                html.H5(\"Total Finals\", style={\"margin\": \"5px\"}),\n",
    "                html.H3(f\"{int(country_data['Total_Finals'])}\", \n",
    "                        style={\"fontSize\": \"48px\", \"color\": \"forestgreen\", \"margin\": \"10px\"})\n",
    "            ], style={\"backgroundColor\": \"lightgray\", \"padding\": \"15px\", \"borderRadius\": \"10px\", \"margin\": \"10px\"})\n",
    "        ], style={\"display\": \"flex\", \"justifyContent\": \"space-around\"})\n",
    "    ])\n",
    "\n",
    "@app.callback(\n",
    "    Output(\"year-stats-display\", \"children\"),\n",
    "    Input(\"year-dropdown\", \"value\")\n",
    ")\n",
    "def display_year_stats(selected_year):\n",
    "    year_data = world_cup_events[world_cup_events[\"Year\"] == selected_year].iloc[0]\n",
    "    return html.Div([\n",
    "        html.H4(f\"{selected_year} FIFA World Cup\", style={\"marginBottom\": \"10px\", \"color\": \"navy\"}),\n",
    "        \n",
    "        html.Div([\n",
    "            html.Div([\n",
    "                html.H5(\"Host\", style={\"margin\": \"5px\"}),\n",
    "                html.H3(year_data[\"Host\"], style={\"color\": \"dimgray\", \"margin\": \"10px\"})\n",
    "            ], style={\"backgroundColor\": \"lightgray\", \"padding\": \"15px\", \"borderRadius\": \"10px\", \"margin\": \"10px\"}),\n",
    "            \n",
    "            html.Div([\n",
    "                html.H5(\"Winner\", style={\"margin\": \"5px\", \"color\": \"gold\"}),\n",
    "                html.H3(year_data[\"Winner\"], style={\"color\": \"forestgreen\", \"margin\": \"10px\", \"fontWeight\": \"bold\"})\n",
    "            ], style={\"backgroundColor\": \"lightgray\", \"padding\": \"15px\", \"borderRadius\": \"10px\", \"margin\": \"10px\"}),\n",
    "            \n",
    "            html.Div([\n",
    "                html.H5(\"Runner-Up\", style={\"margin\": \"5px\", \"color\": \"silver\"}),\n",
    "                html.H3(year_data[\"Runner_up\"], style={\"color\": \"dimgray\", \"margin\": \"10px\"})\n",
    "            ], style={\"backgroundColor\": \"lightgray\", \"padding\": \"15px\", \"borderRadius\": \"10px\", \"margin\": \"10px\"})\n",
    "        ], style={\"display\": \"flex\", \"flexDirection\": \"column\"})\n",
    "        \n",
    "    ])\n",
    "\n",
    "if __name__ == \"__main__\":\n",
    "    app.run()\n"
   ]
  },
